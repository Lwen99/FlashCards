@model Cards

<form method="post">
    <div class="border p-2 pt-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Create Card
            </h2>
        </div>
        <div asp-validation-summary="All"></div>

            <div class="mb-3 ">
                <label asp-for="Question"></label>
                <input asp-for="Question" class="form-control" />
                <span asp-validation-for="Question" class="text-danger"></span>
            </div>

            <div class="mb-3 ">
                <label asp-for="Answer"></label>
                <input asp-for="Answer" class="form-control" />
            </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">
                    Create
                </button>
            </div>
            <div class="col-6 col-md-3">
                   <a asp-controller="card" asp-action="index" class="btn btn-secondary form-control">
                        Back to flash card
                    </a>
            </div>
        </div>
  
     
    </div>

</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPArtial" />
    }
}